<link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
<!-- Menu toggle -->
<a href="#menu" id="menuLink" class="menu-link">
  <!-- Hamburger icon -->
  <span></span>
</a>
<div id="menu">
  <div class="pure-menu">
      <a class="pure-menu-heading" href="#">Saint Stories</a>

      <ul class="pure-menu-list">
        <li class="pure-menu-item">
          <%= link_to "Home", root_path, class: "sideitem" %>
        </li>

          <li class="pure-menu-item">
            <%= link_to "The Map", root_path, class: "sideitem" %>
          </li>

          <li class="pure-menu-item">
            <%= link_to "The Saints", saints_path, class: "sideitem" %>
          </li>

          <li class="pure-menu-item">
            <%= link_to "About", about_path, class: "sideitem" %>
          </li>

          <% if logged_in? %>
          <div class="dropdown-divider"></div>
            <li class="pure-menu-item">
              <%= link_to "Profile", current_user, class: "sideitem" %>
            </li>
            <li class="pure-menu-item"> <!--<%= active_class(about_path) %>-->
              <%= link_to "Settings", edit_user_path(current_user), class: "sideitem" %>
            </li>

            <% if logged_in? && current_user.admin? %>
              <li class="pure-menu-item"><%= link_to "Users", users_path, class: "sideitem" %></li>
              <li class="pure-menu-item"><%= link_to "Pending Users", pending_users_path, class: "sideitem" %></li>
              <li class="pure-menu-item"><%= link_to "Add Saint", new_saint_path, class: "sideitem" %></li>
              <li class="pure-menu-item menu-item-divided"><%= link_to "Log out", logout_path, method: "delete", class: "sideitem" %></li>
            <% end %>
          <% end %>
      </ul>
  </div>
</div>
