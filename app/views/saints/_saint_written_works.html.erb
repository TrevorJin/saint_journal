<div class="col-xl-12 scrollnav-offset" id="writings">
  <h1 class="saint-section-title" >
    Writings
  </h1>
  <!-- /.saint-section-title -->
  <% @written_works.each do |written_work| %>
    <h3>
      <%= written_work.title %>
      <br>
      <small>
        <% if written_work.publication_accuracy == 0 %>
          <%= written_work.publication_date.strftime("%-Y") %>
        <% elsif written_work.publication_accuracy == 1 %>
          <%= written_work.publication_date.strftime("%-Y") %>
        <% else %>
          <%= written_work.publication_date.strftime("%B %d, %-Y") %>
        <% end %>
      </small>
    </h3>
    <p>
      <%= written_work.description %>
    </p>
  <% end %>
</div>
<!-- /.col-xl-12 scrollnav-offset -->
