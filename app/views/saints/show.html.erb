<%= render 'layouts/regular_sidebar' %>
<div class="page-content-wrapper" style="padding-top: 53px;">
  <nav id="navbar" class="navbar navbar-light" style="background-color: #e3f2fd; position: fixed; top:0; right:0; left:0; z-index: 1030">
    <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle">Menu</a>
    <ul class="nav nav-pills">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Table of Contents</a>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="#general">Back to Top</a>
          <% if @saint.timeline_events.any? %>
            <a class="dropdown-item" href="#timeline">Life Timeline</a>
          <% end %>
          <% if @saint.saint_photos.any? %>
            <a class="dropdown-item" href="#photos">Photos</a>
          <% end %>
          <% if @following_saints.any? %>
            <a class="dropdown-item" href="#related">Related Saints</a>
          <% end %>
          <% if @saint.written_works.any? %>
            <a class="dropdown-item" href="#writings">Writings</a>
          <% end %>
        </div>
        <!--/. dropdown-menu -->
      </li>
      <!-- /.nav-item dropdown -->
    </ul>
  </nav>
  <div data-spy="scroll" data-target="#navbar-example2" data-offset="0">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xl-12">
          <h1 class="saint-title" style="padding-top: 60px; margin-top: -40px;" id="general">
            <%= title @saint.name %>
          </h1>
          <!-- /.saint-title-->
          <% if !@saint.avatar.blank? %>
            <% if @saint.avatar_alternative_text? %>
              <%= image_tag @saint.avatar.url, class: "rounded-circle saint-image", alt: @saint.avatar_alternative_text, title: @saint.avatar_alternative_text %>
            <% else %>
              <%= image_tag @saint.avatar.url, class: "rounded-circle saint-image" %>
            <% end %>
          <% end %>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#infoModal">
            Show Basic Info
          </button>
          <% if logged_in? && current_user.admin? %>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#adminModal">
              Show Admin Options
            </button>
            <%= render 'saints/admin_modal' %>
          <% end %>
          <%= render 'saints/basic_info_modal' %>
          <% if @saint.long_description.present? %>
            <%= @saint.long_description.html_safe %>
          <% end %>
        </div>
        <!-- /.col-xl-12 -->
          <% if @saint.timeline_events.any? %>
            <div class="row" style="margin-left: 0; margin-top:20px; margin-right: 0; padding-top: 60px; margin-top: -40px;" id="timeline">
              <%= render 'saints/saint_timeline' %>
            </div>
            <!-- /.row -->
          <% end %>
          <% if @saint.saint_photos.any? %>
            <div class="row" style="margin-left: 0; margin-right: 0; padding-top: 60px; margin-top: -40px;" id="photos">
              <%= render 'saints/saint_photo_page' %>
            </div>
            <!-- /.row -->
          <% end %>
          <% if @following_saints.any? %>
            <div class="row" style="margin-left: 0; margin-right: 0; padding-top: 60px; margin-top: -40px;" id="related">
              <%= render 'saints/saint_related_saints' %>
            </div>
            <!-- /.row -->
          <% end %>
          <% if @saint.written_works.any? %>
            <div class="row" style="margin-left: 0; margin-right: 0; padding-top: 60px; margin-top: -40px;" id="writings">
              <div class="section section-dark text-center landing-section" style="margin-left: 0; margin-right: 0;">
                <%= render 'saints/saint_written_works' %>
              </div>
              <!-- /.section section-dark text-center landing-section -->
            </div>
            <!-- /.row -->
          <% end %>
        </div>
        <!-- /.col-xl-12 column -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
</div>
<!-- /.page-content-wrapper -->
<%= render 'shared/side_menu_script' %>
