<% @following_saints.each do |saint| %>
	<% if !saint.avatar.blank? %>
    <% if saint.avatar_alternative_text? %>
      <%= image_tag saint.avatar.url, class: "img-circle saint-image", alt: saint.avatar_alternative_text, title: saint.avatar_alternative_text %>
    <% else %>
      <%= image_tag saint.avatar.url, class: "img-circle saint-image" %>
    <% end %>
  <% end %>
	<br>
	<%= link_to saint.name, saint %>
<% end %>
