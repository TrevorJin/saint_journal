<%= render 'layouts/regular_sidebar' %>
<div id="page-content-wrapper">
  <%= render 'shared/menu_toggle' %>
  <h1>
    New Timeline Event
  </h1>
  
  <%= simple_form_for(@timeline_event) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :saint_id %>
      <%= f.input :event_priority %>
      <%= f.input :event_title %>
      <%= f.input :event_time %>
      <%= f.input :image %>
      <%= f.input :image_caption %>
      <%= f.input :image_description %>
      <%= f.input :image_alternative_text %>
      <%= f.input :event_description %>
    </div>
    <!-- /.form-inputs -->

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
    <!-- /.form-actions -->
  <% end %>
  
  <%= link_to 'Back', timeline_events_path %>
</div>
<!-- /.page-content-wrapper -->
<%= render 'shared/top_of_page' %>
<%= render 'shared/side_menu_script' %>
